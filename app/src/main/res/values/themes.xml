<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_dark</item>
        <item name="colorPrimaryVariant">@color/gray_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
    </style>

    <style name="Base_Text_14_19_Medium_Manrope" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="H1_32_38_Regular_Oswald" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_movies_size</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>